@model Bar_rating.Models.Bars

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Flight</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BarName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BarName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        
    </dl>
    <h3>Reviews:</h3>
    @if (Model.Reviews.Any())
    {
        <ul>
            @foreach (var reviews in Model.Reviews)
            {
                <li>@reviews.Text @reviews.user </li>
            }
        </ul>
    }
    else
    {
        <p>No reservations for this flight</p>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
